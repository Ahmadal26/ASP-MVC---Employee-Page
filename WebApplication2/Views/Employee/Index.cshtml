@model List<Employee>

<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td> <a href="/employee/Details/?EmployeeId=@employee.EmployeeId" >@employee.EmployeeId</a>  </td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Employee/AddEmployee" class="btn btn-info">Add Employee</a>